<Project Sdk="Microsoft.NET.Sdk">

  <!-- General-->
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  
  <!-- Nuget -->
  <PropertyGroup>
    <!-- General -->
    <PackageId>Pype</PackageId>
    <Title>Pype</Title>
    <Description>Pype in-process mediator for requests, notifications and handlers.</Description>
    <PackageTags>command;query;request;notification;handler;bus;mediator</PackageTags>
    <Authors>Darjan Bogdan</Authors>
    <RepositoryUrl>https://github.com/darjanbogdan/pype</RepositoryUrl>

    <!-- Version -->
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>$(VersionSuffix)</VersionSuffix>

    <!-- License -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- Symbols package -->
    <IncludeSymbols >true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  
</Project>

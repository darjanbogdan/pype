<Project Sdk="Microsoft.NET.Sdk">

  <!-- General-->
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Configurations>Debug;Release</Configurations>
  </PropertyGroup>
  
  <!-- Nuget -->
  <PropertyGroup>
    <!-- General -->
    <PackageId>Pype</PackageId>
    <Title>Pype</Title>
    <Description>In-process mediator for requests, notifications and handlers.</Description>
    <PackageTags>command;query;request;notification;handler;bus;mediator</PackageTags>
    <Authors>Darjan Bogdan</Authors>
    <RepositoryUrl>https://github.com/darjanbogdan/pype</RepositoryUrl>

    <!-- Version -->
    <VersionPrefix>1.2.0</VersionPrefix>
    <VersionSuffix>$(VersionSuffix)</VersionSuffix>

    <!-- License -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- Symbols package -->
    <IncludeSymbols Condition="'$(Configuration)' != 'Release'">true</IncludeSymbols>
    <SymbolPackageFormat Condition="'$(Configuration)' != 'Release   '">snupkg</SymbolPackageFormat>
  </PropertyGroup>
  
</Project>
